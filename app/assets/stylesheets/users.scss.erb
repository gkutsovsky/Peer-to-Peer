html {
  background-color: green;
}


.login {


   background-image: url(<%= asset_path("brickell_background.jpg") %>);
   background-position: center;
   background-repeat: no-repeat;
   background-size: cover;
   position: relative;
   display: flex;
   flex-wrap: wrap;
   margin:auto;
   min-height: 100vh;
}

.hp_login{
  margin-left: 100px;
  margin-right: 100px;
  margin-bottom: 30px;
}

.hp_login a,
.hp_login a:hover {
  color: green;
  font-weight: bold;
  font-size: 1.3rem
}

#main-title  {
  text-align: center;
  color: #FFD844;
  font-size:64px;
  line-height: 64px;
  padding: 2rem 25%;
}

#main-title + div {
  width: 100%;
}

.login label {
  color: green;
  font-size: 1.3rem;
}

.change_password {
  color: #FFD844;
  font-size:32px;
}

.forgot_password {
  color: #FFD844;
  font-size:32px;
}

.container_login{

}

.login-button {
  background-color: #010101;
}
.login-button:hover {
  background-color: #222;
}

