<div class="alert alert-primary" role="alert"><%= notice %></div>

<div class="container">


<div class="col-sm-4" style="float:left;border:solid 0px;height:150px;">
  <% if @good.pic.attached? %>
    <%= image_tag @good.pic %>
  <% end  %>
</div>


<p>
  <%= @good.description %>
</p>

<p>
  <strong>More information:</strong>
  <%= @good.more_information %>
</p>

<div class="edit-back">
<%if current_user.id == @good.user_id %>
  <%= link_to 'Edit', edit_good_path(@good) %> |
<%end%>
<%= link_to 'Back', goods_path %>
</div>


</div class="owner">
Owner: <%=  @good.user.email %></div>
<div>


<div class="message">
  <%= link_to "Send this user a message", "/chats/show" %></div>
</div>


<% if @good.user == current_user %>
  <% @good.good_posts.each do |post| %>
    <p>
      <%= post.body %>
      <%= post.user.email %>
      <%= time_ago_in_words(post.created_at) %>
    </p>
  <% end %>

  <hr>

  <%= form_for([@good, GoodPost.new]) do |form| %>
    <%= form.text_field :body %>
    <%= form.submit %>
  <% end %>
<% else %>
  <% @my_posts.each do |post| %>
    <p>
      <%= post.body %>
      <%= post.user.email %>
      <%= time_ago_in_words(post.created_at) %>
    </p>
  <% end %>

  <hr>

  <%= form_for([@good, GoodPost.new]) do |form| %>
    <%= form.text_field :body %>
    <%= form.submit %>
  <% end %>
<% end %>
